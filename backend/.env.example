# ========================================
# 고전문학 사고유도 AI 시스템 환경 변수
# ========================================
# 이 파일을 .env로 복사하여 실제 값을 설정하세요.
# cp .env.example .env

# ----------------------------------------
# Gemini API (Fallback용)
# ----------------------------------------
# Google AI Studio에서 발급: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ----------------------------------------
# Vertex AI (Fine-tuned Gemma 3 Model)
# ----------------------------------------
# 프로덕션 모델 엔드포인트
VERTEX_AI_ENDPOINT=https://us-central1-aiplatform.googleapis.com/v1/projects/knu-team-03/locations/us-central1/endpoints/2283851677146546176:rawPredict
VERTEX_AI_MODEL=classical-lit
# true: Vertex AI 사용 (프로덕션), false: Gemini 사용 (개발)
USE_VERTEX_AI=true

# ----------------------------------------
# 데이터베이스
# ----------------------------------------
# 개발 환경: SQLite
DATABASE_URL=sqlite+aiosqlite:///./classical_literature.db
# 프로덕션 환경: PostgreSQL
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/dbname
# Cloud Run 환경: 메모리 또는 Cloud SQL
# DATABASE_URL=sqlite+aiosqlite:////tmp/test.db

# ----------------------------------------
# 인증 설정
# ----------------------------------------
# JWT 토큰 서명 키 (프로덕션에서는 반드시 변경!)
JWT_SECRET_KEY=your-super-secret-key-change-in-production

# Google OAuth Client ID (선택사항 - 레거시 지원)
GOOGLE_CLIENT_ID=your_google_client_id_here

# ----------------------------------------
# Firebase / Firestore
# ----------------------------------------
# 서비스 계정 키 파일 경로 (Cloud Run에서는 자동 인증)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Firebase 프로젝트 ID
FIREBASE_PROJECT_ID=knu-team-03

# ----------------------------------------
# Google Cloud Document AI
# ----------------------------------------
DOCUMENT_AI_PROCESSOR_ID=your_processor_id_here
DOCUMENT_AI_LOCATION=asia-northeast1

# ----------------------------------------
# CORS 설정
# ----------------------------------------
# 쉼표로 구분된 도메인 목록 (비어있으면 모든 도메인 허용)
# 프로덕션: 특정 도메인만 허용
# CORS_ORIGINS=https://your-flutter-app.web.app,http://localhost:3000
CORS_ORIGINS=

# ----------------------------------------
# 애플리케이션 설정
# ----------------------------------------
PROJECT_NAME=고전문학 사고유도 AI 학습 시스템
DEBUG=true

# 평가 시스템 가중치
QUALITATIVE_WEIGHT=0.7
QUANTITATIVE_WEIGHT=0.3
